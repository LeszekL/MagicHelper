<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagicHelper.MainPage"
             BackgroundColor="DarkBlue">

    <StackLayout>
        <Label Text="Welcome to Magic Helper!" 
            Margin="0,100,0,0"
           TextColor="White"
           VerticalOptions="Center" 
           HorizontalOptions="Center" />

        <Button Text="Go to cards gallery"
                Margin="0,100,0,0"
            Clicked="OnGalleryButtonClicked"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

        <Button Text="Go to cards list gallery"
                Margin="0,100,0,0"
            Clicked="OnGalleryListButtonClicked"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </StackLayout>
</ContentPage>